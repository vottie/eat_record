<h3>データを追加</h3>

<p>ユーザ名: <%= link_to current_user.username, edit_user_registration_path %></p>

<%= form_with url: new_eat_record_path, model: @eat_record do |form| %>
  <div>
    <%= form.label :shop_name, "お店の名前" %><br>
    <%= form.text_field :shop_name %>
  </div>

  <div>
    <%= form.label :place_name, "お店の場所" %><br>
    <%= form.text_field :place_name %>
  </div>

  <div>
    <%= form.label :usecase, "どこで食べた？" %><br>
    <%= form.radio_button :usecase, "店" %>
    <%= form.label :usecase, "店" %>
    <%= form.radio_button :usecase, "家" %>
    <%= form.label :usecase, "家" %>
    <%= form.radio_button :usecase, "テークアウト" %>
    <%= form.label :usecase, "テークアウト" %>
    <%= form.radio_button :usecase, "宅配" %>
    <%= form.label :usecase, "宅配" %>
  </div>

  <div>
    <%= form.label :eat_with, "誰と？" %><br>
    <%= form.radio_button :eat_with, "一人" %>
    <%= form.label :eat_with, "一人" %>
    <%= form.radio_button :eat_with, "友達" %>
    <%= form.label :eat_with, "友達" %>
    <%= form.radio_button :eat_with, "家族" %>
    <%= form.label :eat_with, "家族" %>
  </div>

  <div>
    <%= form.label :eat_date, "食べた日" %><br>
    <%= form.date_select :eat_date %>
  </div>

  <div>
    <%= form.label :eat_time, "時間帯" %><br>
    <%= form.radio_button :eat_time, "朝" %>
    <%= form.label :eat_time, "朝" %>
    <%= form.radio_button :eat_time, "昼" %>
    <%= form.label :eat_time, "昼" %>
    <%= form.radio_button :eat_time, "夜" %>
    <%= form.label :eat_time, "夜" %>
  </div>

  <div>
    <%= form.label :eat_menu, "何食べた？" %><br>
    <%= form.text_field :eat_menu %>
  </div>

  <div>
    <%= form.label :article, "メモ" %><br>
    <%= form.text_field :article %>
  </div>

  <div class="mt-1">
    <%= form.submit class: "btn btn-primary btn-sm" %>
  </div>
<% end %>

<div class="mt-1">
  <%= link_to "戻る", "/eat_records", class: "btn btn-primary btn-sm" %>
</div>
