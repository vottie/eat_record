
<p>ユーザ名: <%= link_to current_user.username, edit_user_registration_path %></p>

<ul class="list-group list-group">
  <% @eat_records.each do |eat_record| %>
    <li class="list-group-item">
      <span class="eatrec-row1"><%= link_to eat_record.shop_name, eat_record %></span>
      <span class="eatrec-row2"><%= eat_record.eat_date %></span>
    </li>
  <% end %>
</ul>

<%= paginate @eat_records %>

<div class="mt-1">
<%= link_to "通算の記録", stat_eat_records_path, class: "btn btn-primary btn-sm" %>

<%= link_to "新たに登録", "eat_records/new", class: "btn btn-primary btn-sm" %>

<% if user_signed_in? %>
  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete , class: "btn btn-primary btn-sm"%>
  <% else %>
    <%= link_to 'ログイン', new_user_session_path, class: "btn btn-primary btn-sm" %>
<% end %>
</div>
